extends ../layouts/page.jade

block title
        title=article.title
block content
    div.panel.panel-primary.userpanel(id = "article")
            div.panel-heading
                h1(id="articleTitle")=article.title
            div.panel-body
                div.container
                    if(article.creator && article.creator.username)
                        div.author
                            p Author:
                                a(href = "/users?username=" + article.creator.username)=article.creator.username
                    div.content
                        p=article.content
                    if(user)
                        div.rating-container
                            p Your rating:
                            select( id="rating")
                              option(value="1") 1
                              option(value="2") 2
                              option(value="3") 3
                              option(value="4") 4
                              option(value="5") 5
                    div.comments

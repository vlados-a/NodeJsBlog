extends ../layouts/page.jade

block title
    title Create article

block content
        div.panel.panel-primary.userpanel(id = "article")
            div.panel-heading
                if(article)
                    h1=article.title
                else
                    h1 New Article
            div.panel-body
                div.col-sm-6.col-sm-offset-3
                    form(method="POST")
                        div.form-group
                            label(for="titleInput") Title
                            if(article)
                                input.form-control.input-lg(type="text" id="titleInput" placeholder="Title" name="title" value=article.title)
                            else
                                input.form-control.input-lg(type="text" id="titleInput" placeholder="Title" name="title" value='')
                        div.form-group
                            label(for="contentInput") Content
                            if(article)
                                textarea.form-control.input-lg( id="contentInput" placeholder="Content" name="content")=article.content
                            else
                                textarea.form-control.input-lg( id="contentInput" placeholder="Content" name="content")
                        div.form-group
                            div.col-sm-offset-4.col-sm-
                                button.btn.btn-primary.btn-lg(type = "submit") Save

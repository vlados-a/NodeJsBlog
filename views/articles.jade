extends layouts/page.jade

block title
  title Sign In

block content
    div.container
        div.row
            div(id = "searchArticles")
                form.form-horizontal(method="POST")
                    div.form-group
                        label.col-sm-4.control-label.input-lg(for="titleInput") Username
                        div.col-sm-8
                            input.form-control.input-lg(type="text" id="titleInput" placeholder="Title" name="title")
                    div.form-group
                        label.col-sm-4.control-label.input-lg(for="authorInput") Password
                        div.col-sm-8
                            input.form-control.input-lg(type="text" id="authorInput" placeholder="Author" name="author")
                    div.form-group
                        div.col-sm-offset-4.col-sm-8
                            button.btn.btn-primary.btn-lg(type = "submit")
                                i.fa.fa-search
                                span Search
        div.row
            div.col-sm-8
                if(articles.length > 0)
                    div.list-group
                        each item in articles
                            div.list-group-item
                                h1
                                    a(href="#")=item.title
                                if( item.content)
                                    if(item.content.length > 100)
                                        p=item.content.substring(1, 80)
                                            a(href="#") ...Read more
                                    else
                                        p=item.content
                else
                    p Nothing found

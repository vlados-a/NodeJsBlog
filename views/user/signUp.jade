extends ../layouts/page.jade

block title
	title Sign Up
block content
	div.panel.panel-primary.userpanel(id = "signUpBlock")
		div.panel-heading
			h1 Enter username and password
		div.panel-body
			div.container
				div.row
					div.col-sm-6.col-sm-offset-3
						form.form-horizontal(method = "POST" id = "signUpForm")
							div.form-group
								label.col-sm-4.control-label.input-lg(for="nameInput") Username
								div.col-sm-8
									input.form-control.input-lg(type="text" id="nameInput" placeholder="Username" name = "username")
							div.form-group
								label.col-sm-4.control-label.input-lg(for="passwordInput") Password
								div.col-sm-8
									input.form-control.input-lg(type="password" id="passwordInput" placeholder="Password" name = "password")
							div.form-group
								label.col-sm-4.control-label.input-lg(for="passwordInput2") Confirm Password
								div.col-sm-8
									input.form-control.input-lg(type="password" id="passwordInput2" placeholder="Password")
							div.form-group
								div.validation
							div.form-group
								div.col-sm-offset-4.col-sm-8
									button.btn.btn-primary.btn-lg(type = "submit") Sign Up

extends ../layouts/page.jade

block title
	title Sign In

block content
	div.panel.panel-primary.userpanel(id = "signInBlock")
		div.panel-heading 
			h1 Enter your login and password
		div.panel-body
			div.container
				div.row
					div.col-sm-6.col-sm-offset-3
						form.form-horizontal(method="POST")
							div.form-group
								label.col-sm-4.control-label.input-lg(for="nameInput") Username
								div.col-sm-8
									input.form-control.input-lg(type="text" id="nameInput" placeholder="Username" name="username")
							div.form-group
								label.col-sm-4.control-label.input-lg(for="passwordInput") Password
								div.col-sm-8
									input.form-control.input-lg(type="password" id="passwordInput" placeholder="Password" name="password")
							div.form-group
								div.col-sm-offset-4.col-sm-8
									button.btn.btn-primary.btn-lg(type = "submit") Sign In
				div.row
					div.col-sm-2.col-sm-offset-5
						div.btn-group-vertical
							a.btn-facebook.btn-social.btn.btn-block(href = "/auth/facebook")
								span.fa.fa-facebook
								span Sign In with Facebook
							a.btn-twitter.btn-social.btn.btn-block(href = "/auth/twitter")
								span.fa.fa-twitter
								span Sign In with Twitter
							a.btn-vk.btn-social.btn.btn-block(href = "/auth/vk")
								span.fa.fa-vk
								span Sign In with VK
